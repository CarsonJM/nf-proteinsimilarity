/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run CarsonJM/nf-proteinsimilarity -profile test,<docker/singularity>

----------------------------------------------------------------------------------------
*/

process {
    resourceLimits = [
        cpus: 2,
        memory: '7.GB',
        time: '1.h',
    ]
}

params {
    config_profile_name         = 'Test FNA'
    config_profile_description  = 'Minimal test dataset to check FNA functionality'

    // Input data
    query_fasta     = "https://github.com/refresh-bio/PHIST/raw/refs/heads/master/example/virus_multifasta.fna"
    ref_fasta       = "https://github.com/refresh-bio/PHIST/raw/refs/heads/master/example/virus_multifasta.fna"
    chunk_size      = 5
    output          = "protein_similarity.csv"
    remove_tmp      = false
}
